{
  "name": "tdesign-projects-action",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "description": "Only for TDesign's project management automation ci",
  "author": "TDesignOteam",
  "license": "MIT",
  "homepage": "https://github.com/TDesignOteam/tdesign-projects-action",
