    "type": "git",
    "url": "git+https://github.com/TDesignOteam/tdesign-projects-action.git"
  },
  "bugs": {
    "url": "https://github.com/TDesignOteam/tdesign-projects-action/issues"
  },
  "keywords": [
    "actions"
  ],
  "exports": {
    ".": "./dist/index.js"
