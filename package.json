    "@rollup/plugin-typescript": "^12.1.3",
    "@types/node": "^24.0.12",
    "eslint": "^9.29.0",
    "eslint-plugin-format": "^1.0.1",
    "globals": "^16.3.0",
    "lint-staged": "^16.1.5",
    "rollup": "^4.44.1",
    "simple-git-hooks": "^2.13.1",
